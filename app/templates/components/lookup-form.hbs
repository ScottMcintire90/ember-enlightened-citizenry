<h1>Legislator Lookup</h1>

<form>
  <div class="form-group">
    <label for="zip">Zip</label>
    {{input placeholder="90210" value=zip id="zip"}}
    {{#x-select value=type}}
      {{#x-option value="legislators/locate"}}Legislators{{/x-option}}
      {{#x-option value="committees"}}Committees{{/x-option}}
      {{#x-option value="bills"}}Bills{{/x-option}}
    {{/x-select}}
  </div>

  <button class="btn btn-primary" {{action 'lookup'}}>Submit</button>
</form>
